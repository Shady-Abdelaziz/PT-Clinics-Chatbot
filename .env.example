# =============================================================================
# MEDICAL CENTER AI CHATBOT - ENVIRONMENT CONFIGURATION (EXAMPLE)
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# =============================================================================
# HYBRID CONFIGURATION (OpenRouter LLM + Ollama Embeddings)
# =============================================================================

# OpenRouter API Configuration (for LLM)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=tngtech/deepseek-r1t2-chimera:free
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Disable thinking mode for faster responses
LLM_THINKING_ENABLED=false

# Ollama Configuration (for Embeddings - Local, Free)
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text:latest

# Temperature for responses (0.1 = focused, 1.0 = creative)
LLM_TEMPERATURE=0.1

# =============================================================================
# QDRANT VECTOR DATABASE (Cloud)
# =============================================================================

# Qdrant Cloud URL (get from https://cloud.qdrant.io)
QDRANT_URL=your_qdrant_cluster_url_here

# Qdrant API Key (get from your Qdrant dashboard)
QDRANT_API_KEY=your_qdrant_api_key_here

# Collection name in Qdrant
COLLECTION_NAME=medical_center_knowledge

# Qdrant connection timeout (seconds)
QDRANT_TIMEOUT=300

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Excel database file path (local or Google Drive)
EXCEL_DB_PATH=data/Simple_Clinic_Database.xlsx

# =============================================================================
# MEDICAL CENTER INFORMATION
# =============================================================================

# Medical Center name
CENTER_NAME=Medical Center

# Main contact phone
CENTER_PHONE=(555) 200-1000

# Physical Therapy Department phone
PT_PHONE=(555) 200-2000

# Physical Therapy email
PT_EMAIL=pt@medicalcenter.com

# Location
CENTER_LOCATION=Cairo, Egypt

# =============================================================================
# RETRIEVAL SETTINGS
# =============================================================================

# Number of documents to retrieve from vector DB
RAG_RETRIEVAL_K=10

# RAG relevance score threshold (0.0 to 1.0)
RAG_SCORE_THRESHOLD=0.1

# =============================================================================
# CREW AI SETTINGS
# =============================================================================

# Enable verbose output for debugging
CREW_VERBOSE=False

# Maximum iterations for agent tasks
MAX_ITERATIONS=10

# =============================================================================
# FLASK APP CONFIGURATION
# =============================================================================

# Flask app host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
FLASK_HOST=0.0.0.0

# Flask app port
FLASK_PORT=5000

# Flask debug mode (True for development, False for production)
FLASK_DEBUG=True

# =============================================================================
# BUSINESS HOURS
# =============================================================================

# Operating hours
WEEKDAY_HOURS=Monday-Friday: 7:00 AM - 7:00 PM
SATURDAY_HOURS=Saturday: 8:00 AM - 2:00 PM
SUNDAY_HOURS=Sunday: Closed

# =============================================================================
# APPOINTMENT SETTINGS
# =============================================================================

# Appointment slot duration (minutes)
APPOINTMENT_DURATION=30

# Advance booking days
MAX_ADVANCE_BOOKING_DAYS=30

# Cancellation notice hours
CANCELLATION_NOTICE_HOURS=24

# =============================================================================
# OPTIONAL: CrewAI Tracing (for debugging)
# =============================================================================

# Enable CrewAI tracing (set to false in production)
CREWAI_TRACING_ENABLED=false
